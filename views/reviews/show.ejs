<!DOCTYPE html>
<html>
  <head>
    <% include ../partials/head.ejs %>
  </head>
  <body>
    <nav>
      <% include ../partials/nav.ejs %>
    </nav>
    <div class="content">

      <div id="myCarousel" class="carousel slide" data-ride="carousel">
        <ol class="carousel-indicators">

          <% for (let i = 0; i < review.img.length; i++) {

            if (i === 0) { %>
              <li data-target="#myCarousel" data-slide-to="<%= i %>" class="active"></li>
            <% }
            else { %>
              <li data-target="#myCarousel" data-slide-to="<%= i %>"></li>
            <% } %>


          <% } %>

        </ol>
        <div class="carousel-inner" role="listbox">

          <% for (let i = 0; i < review.img.length; i++) {

            if (i === 0) { %>
              <div class="item active">
                <img class="first-slide" src="<%= review.img[i] %>" >
              </div>
            <% }
            else if (i === 1) { %>
              <div class="item">
                <img class="second-slide" src="<%= review.img[i] %>" >
              </div>
              <% }
            else if (i === 2) { %>
              <div class="item">
                <img class="third-slide" src="<%= review.img[i] %>" >
              </div>
            <% }
            else { %>
              <div class="item active">
                <img class="first-slide" src="http://via.placeholder.com/900x450" >
              </div>
            <% } %>


          <% } %>

        </div>
        <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
          <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
          <span class="sr-only">Previous</span>
        </a>
        <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
          <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
          <span class="sr-only">Next</span>
        </a>
      </div>
      <div>
        <div>
          <% if (review.site !== "") { %>
            <%= review.location %>: <%= review.site %>
          <% }
          else { %>
            <%= review.location %>
          <% } %>
        </div>
        <div>
          Rating: <%= review.rating %>
        </div>
      </div>

      <div>
        <%= review.review %>
      </div>
    </div>
    <% include ../partials/footer.ejs %>
  </body>
</html>
