<!DOCTYPE html>
<html>
  <head>
    <% include ../partials/head.ejs %>
  </head>
  <body>
    <nav>
      <% include ../partials/nav.ejs %>
    </nav>
    <div class="alt-index">

      <div class="row-1">
        <div class="jumbotron">
          <h1>Get inspired &amp; camp out</h1>
          <h3>Ratings and reviews of campsites added by users like you</h3>
          <h2>
            <a href="/reviews/rv">RV</a> |
            <a class="index-link" href="/reviews/car">Car</a> |
            <a class="index-link" href="/reviews/tent">Tent</a>
          </h2>
        </div>

        <a class="index-card" href="/reviews/<%= allReviews[0].id %>">
          <img class="img-index" src="<%= allReviews[0].img[0] %>"/>
          <div class="img-text"><%= allReviews[0].location %></div>
        </a>
      </div>

      <div class="row-2">
        <% for (var i = 1; i < 4; i++) { %>
          <a class="index-card" href="/reviews/<%= allReviews[i].id %>">
            <img class="img-index" src="<%= allReviews[i].img[0] %>"/>
            <div class="img-text"><%= allReviews[i].location %></div>
          </a>
        <% } %>
      </div>

      <div class="row-3">
        <% for (var i = 4; i < 6; i++) { %>
          <a class="index-card" href="/reviews/<%= allReviews[i].id %>">
            <img class="img-index" src="<%= allReviews[i].img[0] %>"/>
            <div class="img-text"><%= allReviews[i].location %></div>
          </a>
        <% } %>
        <a href="/reviews/new" class="jumbotron add-review">
          <h2>
            <span class="glyphicon glyphicon-plus" aria-hidden="true"></span>
            <div class="index-link">Add a review</div>
          </h2>
        </a>

      </div>

    </div>

    <% include ../partials/footer.ejs %>
  </body>
</html>
